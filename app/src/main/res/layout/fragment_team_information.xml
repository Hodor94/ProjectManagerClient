    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:text="@string/label_team_name"
        />

    <TextView
        android:id="@+id/team_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_marginBottom="5sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/label_description"
        />

    <TextView
        android:id="@+id/team_profile_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_marginBottom="5sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/label_admin"
        />

    <TextView
        android:id="@+id/team_profile_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="15sp" />

    <Button
        android:id="@+id/team_profile_btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:textColor="@color/text"
        android:text="@string/edit"/>

    <Button
        android:id="@+id/btn_leave_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:text="@string/leave" />

    <ImageView
        android:id="@+id/google_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:scaleType="fitXY"
        android:background="@drawable/drive_dark_large"/>

</LinearLayout>