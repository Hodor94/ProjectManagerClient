<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_appointments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grum.raphael.projectmanagerclient.com.grum.raphael.projectmanagerclient.fragments.ProjectsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:text="@string/label_name" />

            <EditText
                android:id="@+id/create_appointment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:text="@string/label_description" />

            <EditText
                android:id="@+id/create_appointment_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="@string/label_deadline" />

            <DatePicker
                android:id="@+id/create_appointment_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:hint="@string/hint_deadline"
                android:inputType="date"
                android:theme="@style/FragmentDatePickerStyle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="@string/label_time" />

            <TimePicker
                android:layout_gravity="center"
                android:id="@+id/create_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:numbersInnerTextColor="@color/text"
                android:numbersSelectorColor="@color/toolbar"
                android:numbersTextColor="@color/text"
                android:timePickerMode="spinner" />

            <Button
                android:id="@+id/btn_create_appointment_rdy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:text="@string/ready" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
