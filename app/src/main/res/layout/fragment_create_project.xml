<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grum.raphael.projectmanagerclient.com.grum.raphael.projectmanagerclient.fragments.ProjectsFragment">

    <ScrollView
        android:id="@+id/create_project_scoll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="@string/label_name" />

            <EditText
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:layout_marginBottom="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="@string/label_description" />

            <EditText
                android:id="@+id/project_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:layout_marginBottom="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="@string/label_project_manager" />

            <Spinner
                android:id="@+id/dropdown_project_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="@string/label_deadline" />

            <DatePicker
                android:id="@+id/deadline_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:hint="@string/hint_deadline"
                android:inputType="date"
                android:theme="@style/FragmentDatePickerStyle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="@string/label_time" />

            <TimePicker
                android:layout_gravity="center"
                android:id="@+id/time_picker_create_project"
                android:numbersTextColor="@color/text"
                android:numbersInnerTextColor="@color/text"
                android:numbersSelectorColor="@color/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:timePickerMode="spinner"
                android:layout_marginRight="25sp"
                android:layout_marginLeft="25sp"/>

            <Button
                android:id="@+id/btn_create_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:layout_marginBottom="10sp"
                android:text="@string/ready" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
