<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp"
    android:background="@drawable/border_popup"
    android:orientation="vertical"
    android:theme="@style/FontSizeStyle"
    tools:context="com.grum.raphael.projectmanagerclient.com.grum.raphael.projectmanagerclient.fragments.PopupUserFragment">

    <Button
        android:id="@+id/close_btn_team"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="right"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="8sp"
        android:background="@drawable/round_btn"
        android:text="X"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:text="@string/label_team_name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/popup_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:text="@string/label_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/popup_team_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:text="@string/label_admin"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/popup_team_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp" />

                <Button
                    android:id="@+id/btn_join_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Beitreten" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
