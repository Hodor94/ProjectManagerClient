<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/FontSizeStyle">

    <TextView
        android:id="@+id/project_users_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <ListView
            android:id="@+id/project_already_members"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"  />

        <ListView
            android:id="@+id/project_team_members"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        
    </LinearLayout>

    <Button
        android:id="@+id/edit_project_membership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_edit_membership" />

</LinearLayout>
