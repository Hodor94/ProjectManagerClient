<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp"
    android:background="@drawable/border_popup"
    android:orientation="vertical"
    android:theme="@style/FontSizeStyle"
    tools:context="com.grum.raphael.projectmanagerclient.com.grum.raphael.projectmanagerclient.fragments.PopupUserFragment">

    <Button
        android:id="@+id/close_btn_popup_agree"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="right"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="8sp"
        android:background="@drawable/round_btn"
        android:text="X"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/popup_agree_text_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/popup_agree_text_info"
            android:weightSum="2"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/agree"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignRight="@+id/popup_agree_text_info"
                android:layout_marginRight="5sp"
                android:background="@drawable/ic_agree" />

            <ImageView
                android:id="@+id/disagree"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignRight="@+id/agree"
                android:layout_marginLeft="5sp"
                android:background="@drawable/ic_disagree" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
