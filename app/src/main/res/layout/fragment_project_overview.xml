<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/FontSizeStyle"
    tools:context="com.grum.raphael.projectmanagerclient.com.grum.raphael.projectmanagerclient.fragments.ProjectsFragment" >

    <android.support.design.widget.TabLayout
        android:id="@+id/project_overview_tab"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_team_profile"
        android:background="?attr/colorPrimary"
        android:elevation="6sp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_marginBottom="20sp" />

    <FrameLayout
        android:layout_marginTop="10sp"
        android:id="@+id/pager_project_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_projects_profile"
        android:layout_alignParentBottom="true" />

</LinearLayout>
