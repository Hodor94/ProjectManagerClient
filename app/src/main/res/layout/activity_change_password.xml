<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:gravity="center"
    android:layout_marginTop="15sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header_change_password"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <TextView
        android:text="@string/label_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/old_password"
        android:hint="@string/hint_type_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="Neues Passwort eingeben:"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_password_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:hint="@string/hint_password"
        android:textColor="@color/text"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_marginBottom="10sp"
        android:text="@string/label_password_validation"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_password_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_marginBottom="10sp"
        android:hint="@string/hint_password_validation"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:text="Passwort Ã¤ndern"/>

</LinearLayout>

</ScrollView>